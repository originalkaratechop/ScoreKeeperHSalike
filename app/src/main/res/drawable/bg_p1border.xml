<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape >
            <gradient
                android:angle="315"
                android:centerX="0.4"
                android:centerY="0.4"
                android:endColor="#0000"
                android:centerColor="#000000"
                android:startColor="@color/colorGold" />
            <corners android:radius="15dp" />
        </shape>
    </item>
    <item>
        <shape >
            <gradient
                android:angle="315"
                android:centerX="0.3"
                android:centerY="0.3"
                android:endColor="@color/colorGold"
                android:centerColor="#ffffff"
                android:startColor="#0000" />
            <corners android:radius="15dp" />
        </shape>
    </item>
    <item>
        <shape >
            <gradient
                android:angle="315"
                android:centerX="0.1"
                android:centerY="0.1"
                android:endColor="@color/colorGold"
                android:centerColor="#0000"
                android:startColor="#0000" />
            <corners android:radius="15dp" />
            <padding
                android:bottom="4dp"
                android:left="4dp"
                android:right="4dp"
                android:top="4dp" />
        </shape>
    </item>
</layer-list>